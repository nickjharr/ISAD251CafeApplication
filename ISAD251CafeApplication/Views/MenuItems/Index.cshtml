@model IEnumerable<ISAD251CafeApplication.Models.MenuItems>

@{
    ViewData["Title"] = "Index";
}

@{ 
    
}

<h2>ISAD Cafe Menu</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td >
                <a asp-action="AddBasket" asp-route-id="@item.ItemId">Add To Order <i class="material-icons" style="font-size:15px; vertical-align:middle" >shopping_basket</i> </a> 
            </td>
        </tr>
}
    </tbody>
</table>
